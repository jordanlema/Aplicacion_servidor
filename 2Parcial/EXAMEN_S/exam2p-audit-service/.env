# ============================================
# CONFIGURACIÓN DEL MICROSERVICIO exam2p-audit-service
# ============================================

# Puerto del servidor Express
PORT=3000

# URL de RabbitMQ
RABBITMQ_URL=amqp://localhost:5672

# Cola de RabbitMQ para eventos de eliminación
RABBITMQ_QUEUE=exam2p.record.deleted

# URL del webhook de n8n (cambiar según tu configuración)
N8N_WEBHOOK_URL=http://localhost:5678/webhook/exam2p-audit-deletion

# Ruta de la base de datos SQLite
DATABASE_PATH=./src/db/database.sqlite
