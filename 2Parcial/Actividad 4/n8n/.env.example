# ===============================
# Execution Settings
# ===============================

# Guardar ejecuciones
EXECUTIONS_DATA_SAVE_ON_ERROR=all
EXECUTIONS_DATA_SAVE_ON_SUCCESS=all
EXECUTIONS_DATA_SAVE_MANUAL_EXECUTIONS=true

# Timeout de ejecución (en segundos)
EXECUTIONS_TIMEOUT=3600

# ===============================
# Security (Producción)
# ===============================

# Habilitar HTTPS en producción
# N8N_PROTOCOL=https
# N8N_HOST=tu-dominio.com

# JWT Secret (genera uno random en producción)
# N8N_JWT_SECRET=

# Encryption Key (genera uno random en producción)
# N8N_ENCRYPTION_KEY=

# ===============================
# Performance
# ===============================

# Número de workers
# N8N_WORKERS_COUNT=4

# Límite de memoria Node.js
# NODE_OPTIONS=--max-old-space-size=2048

# ===============================
# Logging
# ===============================

# Nivel de log: error, warn, info, verbose, debug
N8N_LOG_LEVEL=info

# Salida de log: console, file
N8N_LOG_OUTPUT=console

